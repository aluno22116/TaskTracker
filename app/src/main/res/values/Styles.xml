<?xml version="1.0" encoding="utf-8"?                   >
<resources>
    <style name="CustomCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:dateTextAppearance">@style/CustomDateTextAppearance</item>
        <item name="android:dayOfWeekTextAppearance">@style/CustomDayOfWeekTextAppearance</item>
        <item name="android:titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="CustomDateTextAppearance">
        <item name="android:textColor">#000000</item> <!-- Cor preta para o texto das datas -->
    </style>

    <style name="CustomDayOfWeekTextAppearance">
        <item name="android:textColor">#000000</item> <!-- Cor preta para o texto dos dias da semana -->
    </style>

    <style name="CustomTitleTextAppearance">
        <item name="android:textColor">#000000</item> <!-- Cor preta para o texto do título (mês/ano) -->
    </style>
    <style name="barradecima" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... outras configurações ... -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#000000</item>
    </style>
</resources>
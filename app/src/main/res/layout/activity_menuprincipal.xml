<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".Menuprincipal"
    android:statusBarColor="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:statusBarColor="@color/black">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbars"
            android:elevation="4dp"
            android:background="#006EA6"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <ImageButton
        android:id="@+id/btnMenuDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:foregroundTint="@color/black"
        app:srcCompat="@drawable/baseline_menu_24"
        />

        </androidx.appcompat.widget.Toolbar>
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#002A40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Principal"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:fontFamily="serif"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lapistransicao"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="52dp"/>


            <Button
                android:id="@+id/vamosver"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="400dp"
                android:backgroundTint="#0087CC"
                android:text="Criadores"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/perfil"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="perfil"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="100dp"
                android:backgroundTint="#0087CC"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/notas"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="200dp"
                android:backgroundTint="#0087CC"
                android:text="notas"
                android:textColor="@color/white"/>

        </FrameLayout>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:background="@color/white"
        app:itemIconTint="@color/black" />

</androidx.drawerlayout.widget.DrawerLayout>

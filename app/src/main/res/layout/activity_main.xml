<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#002A40">




    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="451dp"
        android:layout_height="382dp"
        android:layout_gravity="center"
        android:src="@drawable/nomeapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="400dp"
            android:background="@drawable/input_bg"
            android:hint="Username"
            android:textColorHint="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btnIrParaMenuprincipal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:onClick="irParaMenuprincipal"
            android:text="Entrar"
            android:layout_gravity="center"
            android:backgroundTint="#0087CC"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_bg"/>


        <Button
            android:id="@+id/signupButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Criar Conta"
            android:layout_gravity="center"
            android:backgroundTint="#0087CC"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:onClick="abrirCriarConta"
            android:background="@drawable/input_bg"
            />

        <ImageView
            android:id="@+id/lapis"
            android:layout_width="311dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_below="@id/signupButton"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:src="@drawable/lapistransicao" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>